{
	"build": {

		"include-directories": [
			"include",
			"source"
		],

		"threads": "1",

		"source": "source",
		"filesystem": "__tmp",
		"output": "",
		"toolchain": "FIREFLOWER_PATH/toolchain",
		"build": "build",
		"backup": "backup",

		"pre-build": "",
		"post-build": "",

		"executables": {
			"gcc": "GCC_PATH/bin/arm-none-eabi-gcc.exe",
			"ld": "GCC_PATH/bin/arm-none-eabi-ld.exe"
		},

		"pedantic": true,

		"flags": {
			"c++": "-g -Os -fomit-frame-pointer -ffast-math -DSDK_GCC -DSDK_ARM9 -DSDK_FINALROM -fno-builtin -nostdlib -nodefaultlibs -nostartfiles -fno-rtti -fno-exceptions -std=c++20 -Werror",
			"c": "-g -Os -fomit-frame-pointer -ffast-math -DSDK_GCC -DSDK_ARM9 -DSDK_FINALROM -fno-builtin -nostdlib -nodefaultlibs -nostartfiles -Werror",
			"asm": "-g -Os -x assembler-with-cpp -fomit-frame-pointer",
			"arm9": "-mcpu=arm946e-s -masm-syntax-unified -mno-unaligned-access -mfloat-abi=soft -mabi=aapcs",
			"arm7": "-mcpu=arm7tdmi -masm-syntax-unified -mno-unaligned-access -mfloat-abi=soft -mabi=aapcs"
		},

		"symbols7": "symbols7.x",
		"symbols9": "symbols9.x",
		"allow-eabi-extensions": false,
		"library": "GCC_PATH/lib/gcc/arm-none-eabi/10.2.1"

	},

	"patch": {

		"arm9": {
			"reloc": "0x02065F10",
			"start": "0x021901E0",
			"end": "0x02380000",
			"compress": true
		},

		"arm7": {
			"reloc": "0x037FCF78",
			"start": "0x0380BAA8",
			"end": "0x0380D660",
			"compress": false
		}

	},

	"file-id": {
	},

	"main": {

	"default-target": "arm9"

	}
}